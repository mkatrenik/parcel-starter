{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es5", "es2015", "es2016", "dom"],
    "jsx": "react",
    "sourceMap": true,
    "experimentalDecorators": true,
    "strict": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "baseUrl": ".",
    "paths": {
      "app/*": ["*"]
    }
  },
  "exclude": [".git", "node_modules", ".dist", ".cache"]
}
